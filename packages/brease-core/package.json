{
  "name": "@brease/core",
  "version": "0.0.1",
  "description": "The framework agnostic core that powers Brease",
  "author": "nadilas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotindustries/brease",
    "directory": "packages/brease-core"
  },
  "homepage": "https://brease.run",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/dotindustries"
  },
  "types": "build/lib/index.d.ts",
  "main": "build/lib/index.js",
  "module": "build/lib/index.esm.js",
  "exports": {
    ".": {
      "types": "./build/lib/index.d.ts",
      "import": "./build/lib/index.mjs",
      "default": "./build/lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "build/lib/*",
    "build/umd/*",
    "src"
  ],
  "scripts": {
    "clean": "rimraf ./build",
    "test:eslint": "eslint --ext .ts,.tsx ./src",
    "test:types": "tsc",
    "test:lib": "jest --config ./jest.config.ts",
    "test:lib:dev": "pnpm run test:lib --watch",
    "build:types": "tsc --build"
  },
  "dependencies": {
    "@dotinc/brease-sdk": "^0.0.3"
  }
}
